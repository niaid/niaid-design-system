{#
    ---
    title: Image Default
    ---

    Type: Atoms -> Images

    Description:
        Default pattern to include images.

    Parameters:
        image_default_classes: Additional pattern classes
        image_default_src: The path to the image.
        image_default_alt: Alt text to describe the image.
        image_default_width: The desired width of the image (Optional).
        image_default_height: The desired height of the image (Optional).
        image_default_attributes: Additional image attributes.

    Last Updated: February 9, 2021
#}

{% set image_default_classes = image_default_classes|default() %}
{% set image_default_src = image_default_src|default() %}
{% set image_default_alt = image_default_alt|default() %}
{% set image_default_width = image_default_width|default() %}
{% set image_default_height = image_default_height|default() %}
{% set image_default_attributes = image_default_attributes|default() %}

{% if "https:" not in image_default_src and "http:" not in image_default_src %}
	{% set image_default_src = imagePath ~ image_default_src %}
{% endif %}

<img class="image-nds image--default {{ image_default_classes }}" src="{{ image_default_src }}" alt="{{ image_default_alt }}" {% if image_default_height is not empty %} height="{{ image_default_height }}"{% endif %}{% if image_default_width is not empty %} width="{{ image_default_width }}"{% endif %}{% if image_default_title is not empty %} title="{{ image_default_title }}"{% endif %}{{ image_default_attributes|raw }}/>