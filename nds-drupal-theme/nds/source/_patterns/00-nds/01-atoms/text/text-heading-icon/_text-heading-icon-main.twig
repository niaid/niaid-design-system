{#
    ---
    title: Heading with Icon
    ---

    Type: Atoms -> Text

    Description:
        This component allows users to include a Font Awesome icon next to a heading.

    Parameters:
        text_heading_icon_classes: Additional heading classes.
        text_heading_icon_id: Heading ID.
        text_heading_level: The heading level. Options: "1" through "6".
        text_heading_text: The heading text.
        text_heading_icon: Font Awesome icon name.
        text_heading_icon_weight: Font Awesome icon weight. Options: 'r', 's' (Default), 'b', 'l' (Pro-Only), 'd' (Pro-Only).
        text_heading_icon_position: The side of the heading text that the icon appears on. Options: "left" (Default), "right".

    Includes:
        Atoms -> Icons -> icon-default

    Last Updated: January 15, 2021
#}

{% set text_heading_icon_classes = text_heading_icon_classes|default() %}
{% set text_heading_icon_id = text_heading_icon_id|default() %}
{% set text_heading_level = text_heading_level|default() %}
{% set text_heading_text = text_heading_text|default() %}
{% set text_heading_icon = text_heading_icon|default() %}
{% set text_heading_icon_weight = text_heading_icon_weight|default('s') %}
{% set text_heading_icon_position = text_heading_icon_position|default('left') %}

<h{{ text_heading_level }} class="text-nds text--heading-icon {{ text_heading_icon_classes }}"{% if text_heading_icon_id is not empty %} id="{{ text_heading_icon_id }}"{% endif %}>
    {% if text_heading_icon_position == "left" %}
        {% include "@nds/01-atoms/icons/icon-default/_icon-default-main.twig" with
            {
                "icon_default_type": text_heading_icon,
                "icon_default_weight": text_heading_icon_weight
            }
        %}
    {% endif %}
    {{ text_heading_text }}
    {% if text_heading_icon_position == "right" %}
        {% include "@nds/01-atoms/icons/icon-default/_icon-default-main.twig" with
            {
                "icon_default_type": text_heading_icon,
                "icon_default_weight": text_heading_icon_weight
            }
        %}
    {% endif %}
</h{{ text_heading_level }}>

