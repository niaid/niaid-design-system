{% set text_blockquote_classes = text_blockquote_classes|default() %}
{% set text_blockquote_id = text_blockquote_id|default() %}
{% set text_blockquote_text = text_blockquote_text|default() %}

<blockquote class="text-nds text--blockquote {{ text_blockquote_classes }}"{% if text_blockquote_id is not empty %} id="{{ text_blockquote_id }}"{% endif %}>
  {% block blockquote_content %}
    <p>{{ text_blockquote_text }}</p>
  {% endblock %}
</blockquote>
