                {
                    "icon_default_classes": "icon--document__wrapper__icon icon--document__wrapper__icon--pdf",
                    "icon_default_weight": icon_document_icon_weight,
                    "icon_default_type": "file-pdf"
                }
            %}
        </div>
    {% elseif icon_document_type == "video" %}
        <div class="icon--document__wrapper">
            {% include "@nds/01-atoms/icons/icon-default/_icon-default-main.twig" with 
                {
                    "icon_default_classes": "",
                    "icon_default_weight": icon_document_icon_weight,
                    "icon_default_type": "file-video"
                }
            %}
        </div>
    {% elseif icon_document_type == "image" %}
        <div class="icon--document__wrapper">
            {% include "@nds/01-atoms/icons/icon-default/_icon-default-main.twig" with 
                {
                    "icon_default_classes": "",
                    "icon_default_weight": icon_document_icon_weight,
                    "icon_default_type": "file-image"
                }
            %}
        </div>
    {% elseif icon_document_type == "application" %}
        <div class="icon--document__wrapper">
            {% include "@nds/01-atoms/icons/icon-default/_icon-default-main.twig" with 
