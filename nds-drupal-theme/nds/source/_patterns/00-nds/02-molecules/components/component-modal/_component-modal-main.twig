{% set component_modal_button_classes = component_modal_button_classes|default() %}
{% set component_modal_id = component_modal_id|default() %}
{% set component_modal_classes = component_modal_classes|default() %}

<div class="component--modal--button {{ component_modal_button_classes }}" data-toggle="modal" data-target="#{{ component_modal_id }}">
    {% block modal_thumbnail %}{% endblock %}
</div>

<div class="component-nds component--modal modal {{ component_modal_classes }}" id="{{ component_modal_id }}" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="component--modal__wrapper modal-dialog" role="document">
        <div class="component--modal__wrapper__content">
            <div class="component--modal__wrapper__content__header">
                {% block modal_header_content %}{% endblock %}
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="component--modal__wrapper__content__body">
                {% block modal_body_content %}{% endblock %}
            </div>
            <div class="component--modal__wrapper__content__footer">
                {% block modal_footer_content %}{% endblock %}
            </div>
        </div>
    </div>
</div>