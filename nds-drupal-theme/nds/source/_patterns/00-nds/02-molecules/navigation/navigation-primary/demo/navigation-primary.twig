{% embed "@nds/02-molecules/navigation/navigation-primary/_navigation-primary-main.twig" with
    {
        "navigation_primary_id": "main-navigation"
    }
%}
    {% block navigation_primary_content %}
        <div class="navigation--primary__inner">
            <div class="navigation--primary__inner__item">
                <a class="{{ navigationPrimaryActiveLink == "section-1" ? "active" : "" }}" href="#">Section 1</a>
            </div>
            <div class="navigation--primary__inner__item">
                {% embed "@nds/02-molecules/navigation/navigation-dropdown/_navigation-dropdown-main.twig" with
                    {
                        "navigation_dropdown_active_class": navigationPrimaryActiveLink == "section-2" ? "active" : "",
                        "navigation_dropdown_toggle_text": "Section 2",
                        "navigation_dropdown_toggle_href": "#",
                        "navigation_dropdown_toggle_aria_label": "Open Section 2"
                    }
                %}
                    {% block navigation_dropdown_content %}
                        <a href="#">Item A</a>
                        <a href="#">Item B</a>
                        <a href="#">Item C</a>
                        <a href="#">Item D</a>
                    {% endblock %}
                {% endembed %}
            </div>
            <div class="navigation--primary__inner__item">
                <a class="{{ navigationPrimaryActiveLink == "section-3" ? "active" : "" }}" href="#">Section 3</a>
            </div>
            <div class="navigation--primary__inner__item">
                <a class="{{ navigationPrimaryActiveLink == "section-4" ? "active" : "" }}" href="#">Section 4</a>
            </div>
        </div>
    {% endblock %}
{% endembed %}