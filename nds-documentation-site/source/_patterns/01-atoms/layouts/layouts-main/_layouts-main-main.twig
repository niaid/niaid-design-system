{% set layouts_main_classes = layouts_main_classes|default() %}
{% set layouts_main_id = layouts_main_id|default() %}
{% set layouts_main_left = layouts_main_left|default(3) %}
{% set layouts_main_main = layouts_main_main|default(9) %}
{% set layouts_main_right = layouts_main_right|default(3) %}
{% set layouts_main_breakpoint = layouts_main_breakpoint|default('lg') %}

{% set layouts_main_left_column = block("left_column") %}
{% set layouts_main_main_column = block("main_column") %}
{% set layouts_main_right_column = block("right_column") %}

{% set left_additional_classes = "" %}
{% set main_additional_classes = "" %}
{% set right_additional_classes = "" %}

{% if layouts_main_id == "builder__main" %}
    {% set left_additional_classes = "col-lg-4" %}
    {% set main_additional_classes = "col-lg-8" %}
{% endif %}

<div class="layouts-nds layouts--main {{ layouts_main_classes }}"{% if layouts_main_id is not empty %} id="{{ layouts_main_id }}"{% endif %}>
    {% if layouts_main_left_column|trim is not empty %}
        <div class="layouts--main__column layouts--main__first col{% if layouts_main_breakpoint is not empty %}-{{ layouts_main_breakpoint }}{% endif %}{% if layouts_main_left is not empty %}-{{ layouts_main_left }}{% endif %}{% if left_additional_classes is not empty %} {{ left_additional_classes }}{% endif %}">
            {{ layouts_main_left_column|raw }}
        </div>
    {% endif %}
    {% if layouts_main_main_column is not empty %}
        <div class="layouts--main__column layouts--main__second col{% if layouts_main_breakpoint is not empty %}-{{ layouts_main_breakpoint }}{% endif %}{% if layouts_main_main is not empty %}-{{ layouts_main_main }}{% endif %}{% if main_additional_classes is not empty %} {{ main_additional_classes }}{% endif %}">
            {{ layouts_main_main_column|raw }}
        </div>
    {% endif %}
    {% if layouts_main_right_column is not empty %}
        <div class="layouts--main__column layouts--main__third col{% if layouts_main_breakpoint is not empty %}-{{ layouts_main_breakpoint }}{% endif %}{% if layouts_main_right is not empty %}-{{ layouts_main_right }}{% endif %}{% if right_additional_classes is not empty %} {{ right_additional_classes }}{% endif %}">
            {{ layouts_main_right_column|raw }}
        </div>
    {% endif %}
</div>