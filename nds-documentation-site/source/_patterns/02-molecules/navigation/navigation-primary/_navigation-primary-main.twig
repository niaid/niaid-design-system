{% embed "@nds/02-molecules/navigation/navigation-primary/_navigation-primary-main.twig" with
    {
        "navigation_primary_id": "main-navigation"
    }
%}
    {% block navigation_primary_content %}
        <div class="navigation--primary__inner">
            <div class="navigation--primary__inner__item dropdown">
                <a data-display="static" href="{{ links.getStarted }}" id="dMenuGettingStarted" type="button" class="dropdown-toggle{{ navigationPrimaryActiveLink == "get-started" ? " active" : "" }}" data-toggle="dropdown" aria-label="Toggle Getting Started Section">Getting Started</a>
                <div class="dropdown-menu" aria-labelledby="dMenuGettingStarted">
                    <a class="dropdown-item" href="{{ links.getStarted ~ '#section-quick-start' }}">Quick Start</a>
                    <a class="dropdown-item" href="{{ links.getStarted ~ '#section-static-site-builder' }}">Static Site Builder</a>
                    <a class="dropdown-item" href="{{ links.getStarted ~ '#section-nds-drupal-theme' }}">NDS Drupal Theme</a>
                    <a class="dropdown-item" href="{{ links.getStarted ~ '#section-resources' }}">Resources</a>
                </div>
            </div>
            <div class="navigation--primary__inner__item dropdown">
                <a data-display="static" href="{{ links.design }}" id="dMenuDesign" type="button" class="dropdown-toggle{{ navigationPrimaryActiveLink == "design" ? " active" : "" }}" data-toggle="dropdown" aria-label="Toggle Design Section">Design</a>
                <div class="dropdown-menu" aria-labelledby="dMenuDesign">
                    <a class="dropdown-item" href="{{ links.design ~ '#section-typography' }}">Typography</a>
                    <a class="dropdown-item" href="{{ links.design ~ '#section-icons' }}">Icons</a>
                    <a class="dropdown-item" href="{{ links.design ~ '#section-colors' }}">Colors</a>
                    <a class="dropdown-item" href="{{ links.design ~ '#section-forms' }}">Forms &amp; Input</a>
                    <a class="dropdown-item" href="{{ links.design ~ '#section-layout' }}">Layout &amp; Spacing</a>
                    <a class="dropdown-item" href="{{ links.design ~ '#section-shadows' }}">Shadows</a>
                    <a class="dropdown-item" href="{{ links.design ~ '#section-corners' }}">Corners</a>
                </div>
            </div>
            <div data-display="static" class="navigation--primary__inner__item dropdown">
                <a href="{{ links.development }}" id="dMenuDevelopment" type="button" class="dropdown-toggle{{ navigationPrimaryActiveLink == "development" ? " active" : "" }}" data-toggle="dropdown" aria-label="Toggle Development Section">Development</a>
                <div class="dropdown-menu" aria-labelledby="dMenuDevelopment">
                    <a class="dropdown-item" href="{{ links.development ~ '#section-atomic-design' }}">Atomic Design</a>
                    <a class="dropdown-item" href="{{ links.development ~ '#section-technologies' }}">Technologies &amp; Frameworks</a>
                    <a class="dropdown-item" href="{{ links.development ~ '#section-libraries' }}">Libraries</a>
                    <a class="dropdown-item" href="{{ links.development ~ '#section-themes' }}">Themes</a>
                </div>
            </div>
            <div class="navigation--primary__inner__item">
                <a class="{{ navigationPrimaryActiveLink == "components" ? "active" : "" }}" href="{{ links.components }}">Components</a>
            </div>
            <div class="navigation--primary__inner__item">
                <a class="{{ navigationPrimaryActiveLink == "builder" ? "active" : "" }}" href="{{ links.themeBuilder }}">Theme Builder</a>
            </div>
        </div>
    {% endblock %}
{% endembed %}