{% set navigation_drawer_id = navigation_drawer_id|default() %}
{% set navigation_drawer_classes = navigation_drawer_classes|default() %}

<div id="{{ navigation_drawer_id }}" class="navigation-nds navigation--drawer {{ navigation_drawer_classes }}">
    <div class="navigation--drawer__top">
        <a class="skip-to skip-to--back" href="#" tabindex="-1">Skip to Back</a>
        {% include "@nds/01-atoms/buttons/button-icon/_button-icon-main.twig" with
            {
                "button_icon_classes": "navigation--drawer__top__button-close button--secondary",
                "button_icon_icon": "arrow-to-left",
                "button_icon_icon_weight": "l",
                "button_icon_aria_label": "Close Global Menu",
                "button_icon_attributes": 'tabindex=-1'
            }
        %}
    </div>
    {% block navigation_drawer_content %}
        <div class="navigation--drawer__inner">
            <div class="navigation--drawer__inner__section">
                <a tabindex="-1" href="/">Home</a>
            </div>
            <div class="navigation--drawer__inner__section">
                <div class="navigation--drawer__inner__section__button-wrapper" id="navGettingStarted">
                    <a href="{{ links.getStarted }}" tabindex="-1">Getting Started</a>
                    <button class="navigation--drawer__inner__section__button-wrapper__button button-nds button--secondary" data-toggle="collapse" data-target="#navGettingStartedCollapse" aria-expanded="false" aria-controls="navGettingStartedCollapse" tabindex="-1" aria-label="Toggle Getting Started Section"></button>
                </div>
                <div class="navigation--drawer__inner__section__dropdown collapse" id="navGettingStartedCollapse" class="collapse" aria-labelledby="navGettingStarted" data-parent="#{{ navigation_drawer_id }}">
                    <a class="navigation--drawer__inner__section__dropdown__item" href="{{ links.getStarted }}">Overview</a>
                    <a class="navigation--drawer__inner__section__dropdown__item" href="{{ links.getStarted ~ '#section-quick-start' }}">Quick Start</a>
                    <a class="navigation--drawer__inner__section__dropdown__item" href="{{ links.getStarted ~ '#section-static-site-builder' }}">Static Site Builder</a>
                    <a class="navigation--drawer__inner__section__dropdown__item" href="{{ links.getStarted ~ '#section-nds-drupal-theme' }}">NDS Drupal Theme</a>
                    <a class="navigation--drawer__inner__section__dropdown__item" href="{{ links.getStarted ~ '#section-resources' }}">Resources</a>
                </div>
            </div>
            <div class="navigation--drawer__inner__section">
                <div class="navigation--drawer__inner__section__button-wrapper" id="navDesign">
                    <a href="{{ links.design }}" tabindex="-1">Design</a>
                    <button class="navigation--drawer__inner__section__button-wrapper__button button-nds button--secondary" data-toggle="collapse" data-target="#navDesignCollapse" aria-expanded="false" aria-controls="navDesignCollapse" tabindex="-1" aria-label="Toggle Design Section"></button>
                </div>
                <div class="navigation--drawer__inner__section__dropdown collapse" id="navDesignCollapse" class="collapse" aria-labelledby="navDesign" data-parent="#{{ navigation_drawer_id }}">
                    <a class="navigation--drawer__inner__section__dropdown__item" href="{{ links.design }}">Overview</a>
                    <a class="navigation--drawer__inner__section__dropdown__item" href="{{ links.design ~ '#section-typography' }}">Typography</a>
                    <a class="navigation--drawer__inner__section__dropdown__item" href="{{ links.design ~ '#section-icons' }}">Icons</a>
                    <a class="navigation--drawer__inner__section__dropdown__item" href="{{ links.design ~ '#section-colors' }}">Colors</a>
                    <a class="navigation--drawer__inner__section__dropdown__item" href="{{ links.design ~ '#section-forms' }}">Forms &amp; Input</a>
                    <a class="navigation--drawer__inner__section__dropdown__item" href="{{ links.design ~ '#section-layout' }}">Layout &amp; Spacing</a>
                    <a class="navigation--drawer__inner__section__dropdown__item" href="{{ links.design ~ '#section-shadows' }}">Shadows</a>
                    <a class="navigation--drawer__inner__section__dropdown__item" href="{{ links.design ~ '#section-corners' }}">Corners</a>
                </div>
            </div>
            <div class="navigation--drawer__inner__section">
                <div class="navigation--drawer__inner__section__button-wrapper" id="navDevelopment">
                    <a href="{{ links.development }}" tabindex="-1">Development</a>
                    <button class="navigation--drawer__inner__section__button-wrapper__button button-nds button--secondary" data-toggle="collapse" data-target="#navDevelopmentCollapse" aria-expanded="false" aria-controls="navDevelopmentCollapse" tabindex="-1" aria-label="Toggle Development Section"></button>
                </div>
                <div class="navigation--drawer__inner__section__dropdown collapse" id="navDevelopmentCollapse" class="collapse" aria-labelledby="navDevelopment" data-parent="#{{ navigation_drawer_id }}">
                    <a class="navigation--drawer__inner__section__dropdown__item" href="{{ links.development }}">Overview</a>
                    <a class="navigation--drawer__inner__section__dropdown__item" href="{{ links.development ~ '#section-atomic-design' }}">Atomic Design</a>
                    <a class="navigation--drawer__inner__section__dropdown__item" href="{{ links.development ~ '#section-technologies' }}">Technologies &amp; Frameworks</a>
                    <a class="navigation--drawer__inner__section__dropdown__item" href="{{ links.development ~ '#section-libraries' }}">Libraries</a>
                    <a class="navigation--drawer__inner__section__dropdown__item" href="{{ links.development ~ '#section-themes' }}">Themes</a>
                </div>
            </div>
            <div class="navigation--drawer__inner__section">
                <div class="navigation--drawer__inner__section__button-wrapper" id="navComponent">
                    <a href="{{ links.components }}" tabindex="-1">Components</a>
                    <button class="navigation--drawer__inner__section__button-wrapper__button button-nds button--secondary" data-toggle="collapse" data-target="#navComponentCollapse" aria-expanded="false" aria-controls="navComponentCollapse" tabindex="-1" aria-label="Toggle Components Section"></button>
                </div>
                <div class="navigation--drawer__inner__section__dropdown collapse" id="navComponentCollapse" class="collapse" aria-labelledby="navComponent" data-parent="#{{ navigation_drawer_id }}">
                    <a class="navigation--drawer__inner__section__dropdown__item" href="{{ links.components ~ '#section-components-atoms' }}">Atoms</a>
                    <a class="navigation--drawer__inner__section__dropdown__item" href="{{ links.components ~ '#section-components-molecules' }}">Molecules</a>
                    <a class="navigation--drawer__inner__section__dropdown__item" href="{{ links.components ~ '#section-components-organisms' }}">Organisms</a>
                </div>
            </div>
            <div class="navigation--drawer__inner__section">
                <a tabindex="-1" class="{{ navigationPrimaryActiveLink == "builder" ? "active" : "" }}" href="{{ links.themeBuilder }}">Theme Builder</a>
            </div>
            <div class="navigation--drawer__inner__download">
                {% include "@atoms/buttons/button-github/_button-github-main.twig" %}
            </div>
        </div>
        <a class="skip-to skip-to--top" href="#" tabindex="-1">Skip to Front</a>
    {% endblock %}
</div>
<div class="navigation--drawer--overlay" tabindex="0"></div>