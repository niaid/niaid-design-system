{% set component_style_controls = component_style_controls|default() %}

<div class="component-nds component--style-controls {{ component_style_controls }}">
    <div class="component--style-controls__control">
        {% embed "@nds/02-molecules/input-group/input-group-select/_input-group-select-main.twig" with
            {
                "input_group_select_id": "text-heading",
                "input_group_select_label": "Headings Font",
                "input_group_select_always_selected": "true"
            }
        %}
            {% block input_group_select_options %}
                <option value="public-sans">Public Sans</option>
                <option value="roboto">Roboto</option>
                <option value="martel">Martel</option>
                <option value="merriweather">Merriweather</option>
            {% endblock %}
        {% endembed %}
    </div>
    <div class="component--style-controls__control">
        {% embed "@nds/02-molecules/input-group/input-group-select/_input-group-select-main.twig" with
            {
                "input_group_select_id": "text-body",
                "input_group_select_label": "Body Font",
                "input_group_select_always_selected": "true"
            }
        %}
            {% block input_group_select_options %}
                <option value="public-sans">Public Sans</option>
                <option value="roboto">Roboto</option>
            {% endblock %}
        {% endembed %}
    </div>
    <div class="component--style-controls__control">
        {% embed "@nds/02-molecules/input-group/input-group-select/_input-group-select-main.twig" with
            {
                "input_group_select_id": "color-select",
                "input_group_select_label": "Color Theme",
                "input_group_select_always_selected": "true"
            }
        %}
            {% block input_group_select_options %}
                <option value="theme-1">Theme 1</option>
                <option value="theme-2">Theme 2</option>
                <option value="theme-3">Theme 3</option>
            {% endblock %}
        {% endembed %}
    </div>
    <div class="component--style-controls__control">
        {% embed "@nds/02-molecules/input-group/input-group-select/_input-group-select-main.twig" with
            {
                "input_group_select_id": "shadows",
                "input_group_select_label": "Shadows",
                "input_group_select_always_selected": "true"
            }
        %}
            {% block input_group_select_options %}
                <option value="flat">Flat</option>
                <option value="shadows">Material</option>
            {% endblock %}
        {% endembed %}
    </div>
    <div class="component--style-controls__control">
        {% embed "@nds/02-molecules/input-group/input-group-select/_input-group-select-main.twig" with
            {
                "input_group_select_id": "corners",
                "input_group_select_label": "Corners",
                "input_group_select_always_selected": "true"
            }
        %}
            {% block input_group_select_options %}
                <option value="straight">Sharp</option>
                <option selected="selected" value="semirounded">Semi-Rounded</option>
                <option value="rounded">Fully-Rounded</option>
            {% endblock %}
        {% endembed %}
    </div>
</div>