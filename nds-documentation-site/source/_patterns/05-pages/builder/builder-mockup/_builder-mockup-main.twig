{% set builder_mockup_classes = builder_mockup_classes|default() %}

<div class="builder-nds builder--mockup {{ builder_mockup_classes }}">
    {% embed "@nds/01-atoms/layouts/layouts-site/_layouts-site-main.twig" with
        {
            "layouts_site_id": "builder--mockup"
        }
    %}
        {% block header %}
            {% embed "@nds/03-organisms/global/global-header/_global-header-main.twig" %}
                {% block global_header_content %}
                    {% include "@nds/01-atoms/buttons/button-icon/_button-icon-main.twig" with
                        {
                            "button_icon_id": "global-mobile-menu",
                            "button_icon_classes": "global--header__button button--secondary",
                            "button_icon_icon": "bars",
                            "button_icon_aria_label": "Open Global Menu"
                        }
                    %}
                    {% include "@nds/02-molecules/components/component-branding/_component-branding-main.twig" with
                        {
                            "component_branding_identity_top": global_header_product_id_top,
                            "component_branding_identity_bottom": global_header_product_id_bottom
                        }
                    %}
                    {% include "@nds/02-molecules/forms/form-search/_form-search-main.twig" with
                        {
                            "form_search_id": "form-sample-search-1",
                            "form_search_input_id": "form-sample-search-input-id-1",
                            "form_search_input_name": "form-sample-search-input-name-1",
                            "form_search_input_placeholder": "Searching for something...",
                            "form_search_input_aria_label": "Sample Search Form"
                        }
                    %}
                    {% include "@nds/01-atoms/buttons/button-icon/_button-icon-main.twig" with
                        {
                            "button_icon_id": "global-header-search--open",
                            "button_icon_classes": "global--header__button button--secondary",
                            "button_icon_icon": "search",
                            "button_icon_aria_label": "Open Global Search"
                        }
                    %}
                {% endblock %}
            {% endembed %}
        {% endblock %}
        {% block global_navigation %}
            {% include "@nds/02-molecules/navigation/navigation-primary/demo/navigation-primary.twig" %}
        {% endblock %}
        {% block hero %}
            {% embed "@nds/02-molecules/blocks/block-hero/_block-hero-main.twig" with
                {
                    "block_hero_blur": "parallax-blur progressive-reverse-blur",
                    "block_hero_width": "col-xl-9"
                }
            %}
                {% block block_hero_image %}
                    <img src="{{ imagePath }}michael-longmire-L9EV3OogLh0-unsplash.jpg" alt=""/>
                {% endblock %}
            {% endembed %}
        {% endblock %}
        {% block main %}
            {% embed "@nds/01-atoms/layouts/layouts-main/_layouts-main-main.twig" with
                {
                    "layouts_main_right": 9
                }
            %}
            {% block main_column %}
                {% embed "@nds/01-atoms/layouts/layouts-body/_layouts-body-main.twig" with
                    {
                        "layouts_body_vertical_padding": "no"
                    }
                %}
                    {% block body_content %}
                        {% include "@organisms/content/content-sample/_content-sample-main.twig" %}
                        {% include "@nds/02-molecules/blocks/block-wtph/_block-wtph-main.twig" %}
                    {% endblock %}
                {% endembed %}
            {% endblock %}
            {% endembed %}
        {% endblock %}
    {% endembed %}
    {% block footer %}
        {% include "@nds/03-organisms/global/global-footer/demo/global-footer.twig" %}
    {% endblock %}
</div>