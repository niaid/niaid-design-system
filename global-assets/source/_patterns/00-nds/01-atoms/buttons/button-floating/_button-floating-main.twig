{% set button_floating_classes = button_floating_classes|default() %}
{% set button_floating_id = button_floating_id|default() %}
{% set button_floating_text = button_floating_text|default() %}
{% set button_floating_icon = button_floating_icon|default() %}
{% set button_floating_icon_weight = button_floating_icon_weight|default('s') %}
{% set button_floating_aria_label = button_floating_aria_label|default() %}

<button {% if button_floating_id is not empty %} id="{{ button_floating_id }}"{% endif %} class="button-nds button--floating {{ button_floating_classes }}"{% if button_floating_aria_label is not empty %} aria-label="{{ button_floating_aria_label }}"{% endif %}>
    <div class="button--floating__icon">
        {% include "@nds/01-atoms/icons/icon-default/_icon-default-main.twig" with 
            {
                "icon_default_type": button_floating_icon,
                "icon_default_weight": button_floating_icon_weight
            }
        %}
    </div>
    <div class="button--floating__text">{{ button_floating_text }}</div>
</button>