{% set input_label_id = input_label_id|default() %}
{% set input_label_classes = input_label_classes|default() %}
{% set input_label_text = input_label_text|default() %}
{% set input_label_tooltip = input_label_tooltip|default() %}


<label class="input-nds input--label {{ input_label_classes }}" for="{{ input_label_id }}" title="{{ input_label_text }}">{{ input_label_text }}
    {% if input_label_tooltip is not empty %}
        <a href="#" data-toggle="tooltip" data-placement="top" title="{{ input_label_tooltip }}"><i class=" hint-info fa"></i></a>
    {% endif %}
</label>