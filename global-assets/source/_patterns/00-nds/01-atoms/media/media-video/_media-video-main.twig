{#
    ---
    title: Media Video
    ---

    Type: Atoms -> Media

    Description:
        The Video media component provides a way to offer native video content to users.

    Parameters:
        media_video_classes: Additional media element classes.
		media_video_id: Media element ID.
		media_video_height: Desired height of the video.
		media_video_width: Desired width of the video.
		media_video_controls: HTML5 controls attribute for the video.
		media_video_src_ogv: Path to the video source in .ogv format.
		media_video_src_mp4: Path to the video source in .mp4 format.
		media_video_src_webm: Path to the video source in .webm format.
		media_video_attributes: Additional media attributes.

    Last Updated: January 22, 2021
#}

{% set media_video_classes = media_video_classes|default() %}
{% set media_video_id = media_video_id|default() %}
{% set media_video_height = media_video_height|default() %}
{% set media_video_width = media_video_width|default() %}
{% set media_video_controls = media_video_controls|default() %}
{% set media_video_src_ogv = media_video_src_ogv|default() %}
{% set media_video_src_mp4 = media_video_src_mp4|default() %}
{% set media_video_src_webm = media_video_src_webm|default() %}
{% set media_video_attributes = media_video_attributes|default() %}

<video class="media-nds media--video {{ media_video_classes }}" {% if media_video_id is not empty %} id="{{ media_video_id }}"{% endif %}{% if media_video_width is not empty %} width="{{ media_video_width }}"{% endif %}{% if media_video_height is not empty %} height="{{ media_video_height }}"{% endif %} controls="{{ media_video_controls }}" {{ media_video_attributes }}>
	{% if media_video_src_mp4 is not empty %}<source src="{{ media_video_src_mp4 }}" type="video/mp4">{% endif %}
	{% if media_video_src_webm is not empty %}<source src="{{ media_video_src_webm }}" type="video/webm">{% endif %}
	{% if media_video_src_ogv is not empty %}<source src="{{ media_video_src_ogv }}" type="video/ogv">{% endif %}
</video>