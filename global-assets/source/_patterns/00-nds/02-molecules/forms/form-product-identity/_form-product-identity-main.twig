        <label class="form--product-identity__labels__label form--product-identity__labels__label--top" for="product-id__text--top">Top</label>
        <label class="form--product-identity__labels__label form--product-identity__labels__label--bottom" for="product-id__text--bottom">Bottom</label>
    </div>
    <div class="form--product-identity__inputs">
        <div>
