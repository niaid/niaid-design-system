{% set blocks_search_result_classes = blocks_search_result_classes|default() %}
{% set blocks_search_result_title = blocks_search_result_title|default() %}
{% set blocks_search_result_href = blocks_search_result_href|default() %}
{% set blocks_search_result_description = block('blocks_search_result_description') %}
{% set blocks_search_result_date_last_reviewed = blocks_search_result_date_last_reviewed|default() %}

{% embed "@nds/02-molecules/blocks/block-default/_block-default-main.twig" with
    {
        "block_default_classes": "block--search-result " ~  blocks_search_results_classes
    }
%}
    {% block block_content %}
        <h2 class="block--search-result__title"><a href="{{ blocks_search_result_href }}">{{ blocks_search_result_title }}</a></h2>
        {% if blocks_search_result_description|trim is not empty %}
            {{ blocks_search_result_description|raw }}
        {% endif %}
        {% if blocks_search_result_date_last_reviewed is not empty %}
            <p class="block--search-result__last-reviewed">Last Reviewed: {{ blocks_search_result_date_last_reviewed }}</p>
        {% endif %}
    {% endblock %}
{% endembed %}