{#
    ---
    title: Grid Layout
    ---

    Type: Atoms -> Layouts

    Description:
        The Grid Layout component defines the horizontal and vertical sections of a page. The component provides four equal column options: 2, 3, 4, and 5 columns.

    Blocks:
        {% block layouts_grid_content %}: Block description TBD.

    Parameters:
        layouts_grid_id: Additional grid layout id.
        layouts_grid_classes: Additional grid layout classes.
        layouts_grid_count: Determines how many columns will display in a given row. Options: '2' (Default), '3', '4', '5'.
        layouts_grid_spacing: Determines how many columns will display in a given row. Options: 'none', 'tight', 'default' (Default).
        layouts_grid_data: The variable used to identify a list of objects.
    
    Parameters (Nested):
        layouts_grid_nested_id: Parameter description TBD.
        layouts_grid_nested_classes: Parameter description TBD.
        layouts_grid_nested_count: Parameter description TBD.
        layouts_grid_nested_spacing: Parameter description TBD.
        layouts_grid_nested_data: Parameter description TBD.

    Last Updated: May 17, 2024
#}

{% set layouts_grid_nested = layouts_grid_nested|default(false) %}

{% if layouts_grid_nested == false %}
    {% set layouts_grid_id = layouts_grid_id|default() %}
    {% set layouts_grid_classes = layouts_grid_classes|default() %}
    {% set layouts_grid_columns = layouts_grid_columns|default('2') %}
    {% set layouts_grid_spacing = layouts_grid_spacing|default('default') %}
    {% set layouts_grid_item_classes = layouts_grid_item_classes|default() %}
    {% set layouts_grid_data = layouts_grid_data|default() %}
{% elseif layouts_grid_nested == true %}
    {% set layouts_grid_nested_id = layouts_grid_nested_id|default() %}
    {% set layouts_grid_nested_classes = layouts_grid_nested_classes|default() %}
    {% set layouts_grid_nested_columns = layouts_grid_nested_columns|default('2') %}
    {% set layouts_grid_nested_spacing = layouts_grid_nested_spacing|default('default') %}
    {% set layouts_grid_nested_item_classes = layouts_grid_nested_item_classes|default() %}
    {% set layouts_grid_nested_data = layouts_grid_nested_data|default() %}
{% endif %}

{% if layouts_grid_nested == false %}
    <div class="layouts-nds layouts--grid layouts--grid__col-{{ layouts_grid_columns }} layouts--grid__spacing--{{ layouts_grid_spacing }} {{ layouts_grid_classes }}"{% if layouts_grid_id is not empty %} id="{{ layouts_grid_id }}"{% endif %}>
    {% for grid_item in layouts_grid_data %}
        <div class="layouts--grid__item{% if layouts_grid_item_classes is not empty %} {{ layouts_grid_item_classes }}{% endif %}">
            {% block layouts_grid_content %}{% endblock %}
        </div>
    {% endfor %}
{% elseif layouts_grid_nested == true %}
    <div class="layouts-nds layouts--grid layouts--grid__nested layouts--grid__col-{{ layouts_grid_nested_columns }} layouts--grid__spacing--{{ layouts_grid_nested_spacing }} {{ layouts_grid_nested_classes }}"{% if layouts_grid_nested_id is not empty %} id="{{ layouts_grid_nested_id }}"{% endif %}>
    {% for grid_nested_item in layouts_grid_nested_data %}
        <div class="layouts--grid__nested--item{% if layouts_grid_nested_item_classes is not empty %} {{ layouts_grid_nested_item_classes }}{% endif %}">
            {% block layouts_grid_nested_content %}{% endblock %}
        </div>
    {% endfor %}
{% endif %}
</div>
