{% embed "@nds/01-atoms/layouts/layouts-grid/_layouts-grid-main.twig" with
    {
        "layouts_grid_classes": 'layouts--grid__gallery mb-4',
        "layouts_grid_columns": '2',
        "layouts_grid_spacing": 'tight',
        "layouts_grid_item_classes": 'block-nds',
        "layouts_grid_data": [
            {
                "classes": 'mb-3',
                "src": 'global/sample/fpo_4x3.png',
                "alt": 'Placeholder image',
                "caption": 'This is the first image.',
                "credit": 'NIAID',
                "nested": true,
                "nested_data": [
                    {
                        "src": 'global/sample/fpo_4x3.png',
                        "alt": 'Placeholder image',
                        "caption": 'This is the first image.',
                        "credit": 'NIAID'
                    }
                ]
            },
            {
                "classes": 'mb-3',
                "src": 'global/sample/fpo_4x3.png',
                "alt": 'Placeholder image',
                "caption": 'This is the first image.',
                "credit": 'NIAID',
                "nested": true,
                "nested_data": [
                    {
                        "src": 'global/sample/fpo_4x3.png',
                        "alt": 'Placeholder image',
                        "caption": 'This is the first image.',
                        "credit": 'NIAID'
                    },
                    {
                        "src": 'global/sample/fpo_4x3.png',
                        "alt": 'Placeholder image',
                        "caption": 'This is the second image.',
                        "credit": 'NIAID'
                    }
                ]
            }
        ]
    }
%}
    {% block layouts_grid_content %}
        {% include "@nds/02-molecules/components/component-media/_component-media-main.twig" with
            {
                "component_media_classes": grid_item.classes,
                "component_media_src": grid_item.src,
                "component_media_alt": grid_item.alt,
                "component_media_caption": grid_item.caption,
                "component_media_credit": grid_item.credit
            }
        %}
        {% if grid_item.nested == true %}
            {% embed "@nds/01-atoms/layouts/layouts-grid/_layouts-grid-main.twig" with
                {
                    "layouts_grid_nested": true,
                    "layouts_grid_nested_classes": 'layouts--grid__gallery',
                    "layouts_grid_nested_columns": '2',
                    "layouts_grid_nested_spacing": 'tight',
                    "layouts_grid_nested_data": grid_item.nested_data
                }
            %}
                {% block layouts_grid_nested_content %}
                    {% include "@nds/02-molecules/components/component-media/_component-media-main.twig" with
                        {
                            "component_media_src": grid_nested_item.src,
                            "component_media_alt": grid_nested_item.alt,
                            "component_media_caption": grid_nested_item.caption,
                            "component_media_credit": grid_nested_item.credit
                        }
                    %}
                {% endblock %}
            {% endembed %}
        {% endif %}
    {% endblock %}
{% endembed %}
